              <path d="M6 2V5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              <path d="M1 9H19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
            Lihat Armada
          </a>
        </div>
        
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">50+</div>
            <div class="stat-label">Armada Mobil</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Layanan</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number">1000+</div>
            <div class="stat-label">Pelanggan Puas</div>
          </div>
        </div>
      </section>
      
      <!-- Rent Search Form -->
      <div class="search-wrapper">
        <RentSearch client:load />
      </div>
      
      <!-- Featured Cars Section -->
      <section class="section-padding">
        <FeaturedCars client:load />
      </section>
      
      <!-- Benefits Section -->
      <section class="section-padding bg-light">
        <Benefits client:load />
      </section>
      
      <!-- Services Section -->
      <section class="section-padding">
        <Services client:load />
      </section>
      
      <!-- Features Section (Simple) -->
      <section class="section-padding bg-light">
        <div class="section-header">
          <div class="section-badge">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M10 1L12.5 7.5L19 10L12.5 12.5L10 19L7.5 12.5L1 10L7.5 7.5L10 1Z" fill="#0033A0" fill-opacity="0.1"/>
              <path d="M10 1L12.5 7.5L19 10L12.5 12.5L10 19L7.5 12.5L1 10L7.5 7.5L10 1Z" stroke="#0033A0" stroke-width="1.5"/>
            </svg>
            KEUNGGULAN
          </div>
          <h2 class="section-title">
            Mengapa <span class="title-accent">Memilih Kami</span>?
          </h2>
          <p class="section-subtitle">
