---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/svelte/Navbar/index.svelte';
import RentSearch from '../components/svelte/RentSearch/index.svelte';
import Benefits from '../components/svelte/Benefits/index.svelte';
import Services from '../components/svelte/Services/index.svelte';
import Footer from '../components/svelte/Footer/index.svelte';
import WhatsAppFloat from '../components/svelte/WhatsAppFloat/index.svelte';
import FeaturedCars from '../components/svelte/FeaturedCars/index.svelte';
---

<BaseLayout>
  <Navbar client:load />
  
  <main class="main-content">
    <div class="container">
      <!-- Hero Section -->
      <section class="hero-section">
        <div class="hero-badge">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M10 1L12.5 7.5L19 10L12.5 12.5L10 19L7.5 12.5L1 10L7.5 7.5L10 1Z" fill="#0033A0" fill-opacity="0.1"/>
